<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/editText0"
                android:tag="core_news_url"
                android:gravity="center"
                android:hint="CORE NEWSURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </EditText>

            <EditText
                android:id="@+id/editText1"
                android:tag="core_news_number"
                android:gravity="center"
                android:hint="CORE NEWSNUMBER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true">
            </EditText>

            <EditText
                android:id="@+id/editText2"
                android:tag="core_new_title"
                android:gravity="center"
                android:hint="CORE NEWSTITLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText1"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText3"
                android:tag="core_news_body"
                android:gravity="center"
                android:hint="CORE NEWSBODY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText2"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText4"
                android:tag="core_news_date"
                android:gravity="center"
                android:hint="CORE NEWSDATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText3"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText5"
                android:tag="core_news_source"
                android:gravity="center"
                android:hint="CORE NEWSSOURCE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText4"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText6"
                android:tag="comment_id"
                android:gravity="center"
                android:hint="COMMENT ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText5"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText7"
                android:tag="comment_parentId"
                android:gravity="center"
                android:hint="COMMENT PARENTID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText8"
                android:tag="comment_commenter"
                android:gravity="center"
                android:hint="COMMENT COMMENTER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText9"
                android:tag="comment_location"
                android:gravity="center"
                android:hint="COMMENT LOCATION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText8"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText10"
                android:tag="comment_date"
                android:gravity="center"
                android:hint="COMMENT DATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText9"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText11"
                android:tag="comment_like_comment"
                android:gravity="center"
                android:hint="COMMENT LIKECOMMENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText10"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText12"
                android:tag="comment_dislike_comment"
                android:gravity="center"
                android:hint="COMMENT DISLIKECOMMENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText11"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText13"
                android:tag="comment_response_count"
                android:gravity="center"
                android:hint="COMMENT RESPONSECOUNT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText12"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText14"
                android:tag="comment_body"
                android:gravity="center"
                android:hint="COMMENT BODY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText13"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText15"
                android:tag="core_category"
                android:gravity="center"
                android:hint="CATEGORY NEWS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText14"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText16"
                android:tag="core_label"
                android:gravity="center"
                android:hint="LABEL NEWS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText15"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText17"
                android:tag="operator"
                android:gravity="center"
                android:hint="OPERATOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText15"
                android:layout_centerHorizontal="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search" />

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
